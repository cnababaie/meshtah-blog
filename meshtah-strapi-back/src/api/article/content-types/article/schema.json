{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "originalName": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "writers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::writer.writer"
    },
    "translators": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::writer.writer"
    },
    "source": {
      "type": "component",
      "component": "source.source",
      "repeatable": false
    },
    "OriginalPublishedYear": {
      "type": "biginteger",
      "required": true
    }
  }
}
